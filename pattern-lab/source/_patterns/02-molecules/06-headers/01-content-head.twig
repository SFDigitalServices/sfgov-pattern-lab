<div class="content-head">
  <div class="content-head--container sfgov-container--full">
    {% if image %}
      <div class="content-head--image">
        {{ image }}
      </div>
    {% endif %}
    <div class="content-head--content">
      <h1>{{ title }}</h1>
      {% if description %}
        <h3 class="description">
          {{ description }}
        </h3>
      {% endif %}
    </div>
  </div>
</div>
